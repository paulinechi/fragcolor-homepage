{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "allowJs": false,
    "baseUrl": "src",
    "outDir": "./dist",
    "lib": [
      "DOM",
      "ES7",
      "DOM.Iterable",
      "ScriptHost"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}